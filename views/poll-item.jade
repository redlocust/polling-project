extends layout

block title
    title List of polls


block content
    script(data-require='d3@*', data-semver='4.0.0', src='https://d3js.org/d3.v4.min.js')
    .container
        .raw
            .col-md-8.col-md-offset-2
                p= poll.question
                p I'd like to vote for...:
        .raw
            .col-md-5.col-md-offset-2

                form.form-horizontal(method='post')
                    .form-group
                    select.form-control(name="choice")
                        each val, i in poll.answers
                            option(name="name")=  JSON.stringify(poll.answers[i]['label']).replace(/['"]+/g, '')
                    button(type="submit").btn.btn-primary Submit

            .col-md-3.col

                div#chart

    script(data-require='d3@*', data-semver='4.0.0', src='https://d3js.org/d3.v4.min.js')
    script.

        var dataset = !{JSON.stringify(poll.answers)}

            var width = 360;
            var height = 360;
            var radius = Math.min(width, height) / 2;
            var color = d3.scaleOrdinal(d3.schemeCategory20b);
            var svg = d3.select('#chart')
                    .append('svg')
                    .attr('width', width)
                    .attr('height', height)
                    .append('g')
                    .attr('transform', 'translate(' + (width / 2) +
                            ',' + (height / 2) + ')');
            var arc = d3.arc()
                    .innerRadius(0)
                    .outerRadius(radius);
            var pie = d3.pie()
                    .value(function (d) {
                        return d.count;
                    })
                    .sort(null);
            var path = svg.selectAll('path')
                    .data(pie(dataset))
                    .enter()
                    .append('path')
                    .attr('d', arc)
                    .attr('fill', function (d) {
                        return color(d.data.label);
                    });